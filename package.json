		"eslint-plugin-vue": "^10.5.0",
		"husky": "^9.1.7",
		"jiti": "^2.6.0",
		"jsdom": "^27.0.0",
		"lint-staged": "^16.2.0",
		"npm-run-all2": "^8.0.4",
		"oxlint": "^1.18.0",
		"postcss": "^8.5.6",
		"postcss-html": "^1.8.0",
		"stylelint": "^16.24.0",
		"stylelint-config-standard": "^39.0.0",
		"typescript": "^5.9.2",
		"vite": "npm:rolldown-vite@latest",
		"vite-plugin-html": "^3.2.2",
		"vite-plugin-stylelint": "^6.0.2",
		"vite-plugin-vue-devtools": "^8.0.2",
